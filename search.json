---
layout: null
---
{
  "posts": [
    {% for post in site.posts %}
      {
        "title": {{ post.title | jsonify }},
        "url": {{ post.url | prepend: site.baseurl | jsonify }},
        "date": {{ post.date | date: "%Y-%m-%d" | jsonify }},
        "dateFormatted": {{ post.date | date: "%-d %B %Y" | jsonify }},
        "categories": {{ post.categories | jsonify }},
        "tags": {{ post.tags | jsonify }},
        "description": {{ post.description | strip_html | strip_newlines | jsonify }},
        "quote": {{ post.quote | strip_html | strip_newlines | jsonify }},
        "content": {{ post.content | strip_html | strip_newlines | truncatewords: 50 | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "allTags": [
    {% assign sorted_tags = site.tags | sort %}
    {% for tag in sorted_tags %}
      {
        "name": {{ tag[0] | jsonify }},
        "count": {{ tag[1].size }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
